log-message() {
  tput setaf 2
  echo "--- $*"
  tput sgr0
}

log-header() {
  tput setaf 2
  echo "=== $*"
  tput sgr0
}

log-error() {
  tput setaf 1
  echo "!!! $*"
  tput sgr0
}

die() {
  if [[ $# > 0 ]]; then
    log-error $*
  fi
  exit 1
}

run-command() {
  cmd=$*
  log-message "running: $cmd"
  eval $cmd
}

# vim: ft=bash
